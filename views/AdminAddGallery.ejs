<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add Gallery Image | IGConnect</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background: url('/Images/AddIG.jpg') no-repeat center center fixed;
      background-size: cover;
      position: relative;
    }

    .background-overlay {
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background-color: rgba(0, 0, 0, 0.6);
      z-index: 0;
    }

    .content-wrapper {
      position: relative;
      z-index: 1;
    }

    .form-container {
      max-width: 650px;
      margin: auto;
      background-color: rgba(255, 255, 255, 0.92);
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .heading-title {
      color: #ffffff;
      text-shadow: 1px 1px 6px rgba(0, 0, 0, 0.9);
    }

    .btn-custom {
      background-color: #f39c12;
      color: white;
    }

    .btn-custom:hover {
      background-color: #e08e0b;
    }

    .alert {
      max-width: 650px;
      margin: 10px auto;
    }
  </style>
</head>
<body>
  <!-- Background Overlay -->
  <div class="background-overlay"></div>

  <!-- Navbar -->
  <%- include('partials/admin-navbar') %>

  <!-- Main Content -->
  <div class="container my-5 content-wrapper">
    <!-- Heading -->
    <div class="text-center mb-5">
      <h1 class="display-5 fw-bold heading-title">Add a New Gallery Image</h1>
      <p class="lead text-white">Upload photos and organize them by Interest Group</p>
    </div>

    <!-- Flash Messages -->
    <% if (message.length > 0) { %>
      <div class="alert alert-warning"><%= message %></div>
    <% } %>
    <% if (successMsg.length > 0) { %>
      <div class="alert alert-success"><%= successMsg %></div>
    <% } %>

    <!-- Form Card -->
    <div class="form-container">
      <form action="/admin/gallery/add" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">Image Title</label>
          <input type="text" class="form-control" name="title" id="title" placeholder="Enter image title" required>
        </div>

        <div class="mb-3">
          <label for="image_url" class="form-label">Image URL</label>
          <input type="text" class="form-control" name="image_url" id="image_url" placeholder="Paste image URL here" required>
        </div>

        <div class="mb-3">
          <label for="student_id" class="form-label">Uploader (Student)</label>
          <select name="student_id" id="student_id" class="form-select" required>
            <option value="">-- Select Student --</option>
            <% students.forEach(s => { %>
              <option value="<%= s.id %>"><%= s.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="mb-3">
          <label for="ig_id" class="form-label">Interest Group</label>
          <select name="ig_id" id="ig_id" class="form-select" required>
            <option value="">-- Select IG --</option>
            <% igs.forEach(ig => { %>
              <option value="<%= ig.id %>"><%= ig.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-custom">
            <i class="fas fa-upload me-1"></i> Upload Image
          </button>
          <a href="/admin/gallery" class="btn btn-secondary ms-2">
            <i class="fas fa-arrow-left me-1"></i> Back
          </a>
        </div>
      </form>
    </div>
  </div>

  <%- include('partials/admin-footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
