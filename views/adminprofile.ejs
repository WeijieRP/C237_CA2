<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Profile | IGConnect</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f9f9f9;
    }
    .profile-card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
      padding: 30px;
      margin-bottom: 30px;
    }
    .profile-avatar {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <h2 class="mb-4">üë§ Admin Profile</h2>

    <!-- Admin Info -->
    <div class="profile-card text-center">
      <img src="/images/admin-avatar.png" alt="Profile" class="profile-avatar mb-3">
      <h4><%= admin.name %></h4>
      <p class="text-muted"><%= admin.email %></p>
      <p>Role: <span class="badge bg-warning text-dark"><%= admin.role %></span></p>
      <p>Last Login: <%= moment(admin.lastLogin).format('LLL') %></p>
      <div class="mt-3">
        <a href="/admin/edit-profile" class="btn btn-outline-primary me-2">Edit Profile</a>
        <a href="/admin/change-password" class="btn btn-outline-danger">Change Password</a>
      </div>
    </div>

    <!-- Account Settings -->
    <div class="profile-card">
      <h5 class="mb-3">‚öôÔ∏è Account Settings</h5>
      <form>
        <div class="form-check form-switch mb-2">
          <input class="form-check-input" type="checkbox" id="notifications" checked>
          <label class="form-check-label" for="notifications">Enable Notifications</label>
        </div>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="darkModeToggle">
          <label class="form-check-label" for="darkModeToggle">Dark Mode</label>
        </div>
      </form>
    </div>

    <!-- Security Info -->
    <div class="profile-card">
      <h5 class="mb-3">üîí Security</h5>
      <p>Two-Factor Authentication: <span class="badge bg-secondary">Disabled</span></p>
      <a href="/admin/change-password" class="btn btn-sm btn-outline-danger">Change Password</a>
    </div>

    <!-- Activity Summary -->
    <div class="profile-card">
      <h5 class="mb-3">üìä Activity Summary</h5>
      <div class="row text-center">
        <div class="col-md-3">
          <h6><%= summary.actions %></h6>
          <p class="text-muted">Actions This Month</p>
        </div>
        <div class="col-md-3">
          <h6><%= summary.logins %></h6>
          <p class="text-muted">Logins Last Week</p>
        </div>
        <div class="col-md-3">
          <h6><%= summary.eventsManaged %></h6>
          <p class="text-muted">Events Managed</p>
        </div>
        <div class="col-md-3">
          <h6><%= summary.igsApproved %></h6>
          <p class="text-muted">IGs Approved</p>
        </div>
      </div>
    </div>

    <!-- Export & Help -->
    <div class="profile-card">
      <h5 class="mb-3">üóÇÔ∏è Export & Help</h5>
      <a href="/admin/export-logs" class="btn btn-outline-dark me-3"><i class="fas fa-file-export me-2"></i>Export Logs</a>
      <a href="/docs/admin_guide.pdf" class="btn btn-outline-info me-3" target="_blank"><i class="fas fa-book me-2"></i>Admin Guide</a>
      <a href="mailto:techsupport@igconnect.com" class="btn btn-outline-secondary"><i class="fas fa-envelope me-2"></i>Contact Tech Support</a>
    </div>

    <!-- Back Link -->
    <div class="text-center mt-4">
      <a href="/admin/dashboard" class="btn btn-outline-secondary">‚Üê Back to Dashboard</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
