<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login Animation</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://unpkg.com/lottie-web@5.7.4/build/player/lottie.min.js"></script>

  <style>
    body, html {
      height: 100%;
      margin: 0;
      overflow: hidden;
      background: #f5f7fa;
    }

    body.dark {
      background: #1e1e2f;
      color: #f0f0f0;
    }

    #loader-screen {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: white;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 999;
    }

    #main-screen {
      position: fixed;
      top: 0;
      left: 100%;
      width: 100vw;
      height: 100vh;
      display: flex;
      transition: left 1s ease-in-out;
      z-index: 10;
    }

    #main-screen.show {
      left: 0;
    }

    .left-animation, .right-form {
      width: 50%;
      height: 100%;
    }

    .left-animation {
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(to right, #a1c4fd, #c2e9fb);
    }

    .right-form {
      background-color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .right-form.dark {
      background-color: #2c2c3e;
    }

    .login-card {
      width: 100%;
      max-width: 400px;
      animation: fadeInUp 0.8s ease-out;
    }

    @keyframes fadeInUp {
      from {
        transform: translateY(30px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .form-control.dark {
      background-color: #444;
      color: #fff;
      border-color: #666;
    }

    .btn-outline-dark.dark {
      background-color: #000;
      color: #fff;
    }

    .btn-outline-secondary.dark {
      background-color: #555;
      color: #fff;
    }

    /* Dark Mode Toggle */
    .dark-toggle {
      position: absolute;
      top: 10px;
      right: 10px;
      z-index: 1000;
    }
  </style>
</head>
<body>

  <!-- Loader -->
  <div id="loader-screen">
    <div id="loader-lottie" style="width: 200px; height: 200px;"></div>
  </div>

  <!-- Dark Mode Toggle -->
  <div class="dark-toggle form-check form-switch">
    <input class="form-check-input" type="checkbox" id="darkModeToggle">
    <label class="form-check-label" for="darkModeToggle">Dark Mode</label>
  </div>

  <!-- Main Content: Animation + Form -->
  <div id="main-screen">
    <!-- Left: Animation -->
    <div class="left-animation">
      <div id="human-anim" style="width: 300px; height: 300px;"></div>
    </div>

    <!-- Right: Form -->
    <div class="right-form" id="formContainer">
      <div class="login-card bg-white p-4 rounded shadow">
        <h3 class="text-center mb-4 text-primary fw-bold">Login</h3>
        <form>
          <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" placeholder="Enter username" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" placeholder="Enter password" required>
          </div>
          <div class="mb-3 text-end">
            <a href="#" class="text-decoration-none">Forgot password?</a>
          </div>
          <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
          <button type="button" class="btn btn-outline-secondary w-100 mb-3">Reset Password</button>

          <hr>
          <p class="text-center text-muted mb-3">Or login with</p>
          <div class="d-grid gap-2">
            <a href="#" class="btn btn-outline-danger w-100">
              <img src="https://img.icons8.com/color/16/000000/google-logo.png" class="me-2" />
              Google
            </a>
            <a href="#" class="btn btn-outline-dark w-100">
              <img src="https://img.icons8.com/ios-glyphs/16/ffffff/github.png" class="me-2" />
              GitHub
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    const darkToggle = document.getElementById('darkModeToggle');
    const mainScreen = document.getElementById('main-screen');
    const formContainer = document.getElementById('formContainer');
    const loaderScreen = document.getElementById('loader-screen');

    // Dark mode toggle
    darkToggle.addEventListener('change', function () {
      document.body.classList.toggle('dark', this.checked);
      formContainer.classList.toggle('dark', this.checked);

      const inputs = document.querySelectorAll('.form-control');
      inputs.forEach(input => input.classList.toggle('dark', this.checked));

      document.querySelectorAll('.btn-outline-dark, .btn-outline-secondary').forEach(btn => {
        btn.classList.toggle('dark', this.checked);
      });
    });

    // Loader animation
    const loaderAnim = lottie.loadAnimation({
      container: document.getElementById('loader-lottie'),
      renderer: 'svg',
      loop: false,
      autoplay: true,
      path: 'https://lottie.host/8315ccce-1767-451c-9623-3f6e7726bb46/g1Vcqs68mr.json'
    });

    // Human animation (looping)
    const humanAnim = lottie.loadAnimation({
      container: document.getElementById('human-anim'),
      renderer: 'svg',
      loop: true,
      autoplay: false,
      path: 'https://lottie.host/00d70aad-1ffe-488c-a9f4-adf2a64aa2d7/2Wg6FIPjJQ.json'
    });

    // After loader completes
    loaderAnim.addEventListener('complete', () => {
      loaderScreen.style.display = 'none';
      mainScreen.classList.add('show');
      humanAnim.play();
    });

    // Fallback after 10s
    setTimeout(() => {
      loaderScreen.style.display = 'none';
      mainScreen.classList.add('show');
      humanAnim.play();
    }, 10000);
  </script>
</body>
</html>
