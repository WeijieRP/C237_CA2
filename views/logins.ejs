<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bootstrap Login Slide</title>

  <!-- Bootstrap 5 CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://unpkg.com/lottie-web@5.7.4/build/player/lottie.min.js"></script>

  <style>
    body, html {
      height: 100%;
      margin: 0;
      overflow: hidden;
      background: #f5f7fa;
    }

    #loader-screen {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: white;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 999;
    }

    #form-screen {
      position: fixed;
      top: 0;
      left: 100%;
      width: 100vw;
      height: 100vh;
      background: linear-gradient(to right, #e0eafc, #cfdef3);
      display: flex;
      justify-content: center;
      align-items: center;
      transition: left 1s ease-in-out;
      z-index: 10;
    }

    #form-screen.show {
      left: 0;
    }

    .form-animate {
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.9s ease-out forwards;
    }

    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>
<body>

  <!-- Loader -->
  <div id="loader-screen">
    <div id="loader-lottie" style="width: 200px; height: 200px;"></div>
  </div>

  <!-- Login Form -->
<div id="form-screen">
  <div class="container-fluid p-0">
    <div class="row">
      <div class="col-12">
        <div class="bg-white p-4 p-md-5 form-animate" style="min-height: 100vh;">
          <h2 class="mb-4 text-center fw-bold text-primary">Login</h2>
          <form class="px-2 px-md-5" action="/login" method="post">
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" id="username" class="form-control" placeholder="Enter username" required />
  </div>
  <div class="mb-4">
    <label for="password" class="form-label">Password</label>
    <input type="password" id="password" class="form-control" placeholder="Enter password" required />
  </div>
  <div class="mb-3 text-end">
    <a href="#" class="text-decoration-none">Forgot password?</a>
  </div>

  <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
  <button type="submit" class="btn btn-outline-secondary w-100 mb-3">Reset Password</button>

  <hr class="my-4">

  <p class="text-center text-muted mb-3">Or login with</p>
  <div class="d-grid gap-2">
    <a href="#" class="btn btn-outline-danger w-100">
      <img src="https://img.icons8.com/color/16/000000/google-logo.png" class="me-2" />
      Login with Google
    </a>
    <a href="#" class="btn btn-outline-dark w-100 ">
      <img src="https://img.icons8.com/ios-glyphs/16/ffffff/github.png" class="me-2" />
      Login with GitHub
    </a>
  </div>
</form>

          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Script -->
  <script>
    const loaderScreen = document.getElementById('loader-screen');
    const formScreen = document.getElementById('form-screen');

    // Loader animation
    const loaderAnim = lottie.loadAnimation({
      container: document.getElementById('loader-lottie'),
      renderer: 'svg',
      loop: false,
      autoplay: true,
      path: 'https://lottie.host/8315ccce-1767-451c-9623-3f6e7726bb46/g1Vcqs68mr.json'
    });

    // After loader ends, show form
    loaderAnim.addEventListener('complete', () => {
      loaderScreen.style.display = 'none';
      formScreen.classList.add('show');
    });

    // Fallback after 10s
    setTimeout(() => {
      loaderScreen.style.display = 'none';
      formScreen.classList.add('show');
    }, 10000);
  </script>

</body>
</html>
