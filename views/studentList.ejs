<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Student List</title>
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Interest Group</a>
    </div>
</nav>

<div class="container mt-4">
    <h2 class="text-center mb-4">Student List</h2>

    <form method="POST" action="/students/search" class="mb-4 d-flex justify-content-center">
        <input type="text" name="name" placeholder="Search by name" class="form-control w-50 me-2">
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <div class="text-end mb-3">
        <a href="/students/add" class="btn btn-success">Add New Student</a>
    </div>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>School ID</th>
                <th>Email</th>
                <th>Interests</th>
                <th>Profile Picture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.id %></td>
                    <td><%= student.name %></td>
                    <td><%= student.school_id %></td>
                    <td><%= student.email %></td>
                    <td><%= student.interests %></td>
                    <td>
                        <% if (student.profile_pic) { %>
                            <img src="<%= student.profile_pic %>" alt="Profile" width="60" class="img-thumbnail">
                        <% } else { %>
                            <span>No image</span>
                        <% } %>
                    </td>
                    <td>
                        <a href="/students/edit/<%= student.id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/students/delete/<%= student.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete this student?')">Delete</a>
                        <a href="/profile/<%= student.id %>" class="btn btn-info btn-sm">View Profile</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
