<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit CCA Entry</title>
</head>
<body>
  <h1>Edit CCA Entry</h1>

  <form action="/editCca/<%= entry.id %>" method="POST" enctype="multipart/form-data">
    <label for="title">Title:</label><br>
    <input type="text" id="title" name="title" value="<%= entry.title %>" required><br><br>

    <label for="date">Date:</label><br>
    <input type="date" id="date" name="date" value="<%= entry.date.toISOString().split('T')[0] %>" required><br><br>

    <label for="role">Role:</label><br>
    <input type="text" id="role" name="role" value="<%= entry.role %>" required><br><br>

    <label for="hours">Hours:</label><br>
    <input type="number" id="hours" name="hours" value="<%= entry.hours %>" required><br><br>

    <label for="description">Description:</label><br>
    <textarea id="description" name="description" rows="5" cols="30" required><%= entry.description %></textarea><br><br>

    <label for="file">Upload Certificate/Proof:</label><br>
    <input type="file" id="file" name="file"><br><br>

    <label for="category">Category:</label><br>
    <select id="category" name="category" required>
      <option value="">-- Please select a category --</option>
      <option value="Leadership" <%= entry.category === 'Leadership' ? 'selected' : '' %>>Leadership</option>
      <option value="Volunteering" <%= entry.category === 'Volunteering' ? 'selected' : '' %>>Volunteering</option>
      <option value="Competitions" <%= entry.category === 'Competitions' ? 'selected' : '' %>>Competitions</option>
      <option value="Workshops" <%= entry.category === 'Workshops' ? 'selected' : '' %>>Workshops</option>
      <option value="Others" <%= entry.category === 'Others' ? 'selected' : '' %>>Others</option>
    </select><br><br>

    <label for="feedback">Feedback:</label><br>
    <textarea id="feedback" name="feedback" rows="5" cols="30" required><%= entry.feedback %></textarea><br><br>

    <button type="submit">Update Entry</button>
  </form>

  <br>
  <a href="/dashboard">Back to Dashboard</a>
</body>
</html>
