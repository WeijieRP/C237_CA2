<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Student Profile</title>
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Interest Group</a>
    </div>
</nav>

<div class="container mt-4">
    <h2 class="text-center">Student Profile</h2>

    <div class="card mb-4 mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h4 class="card-title"><%= student.name %></h4>
            <p><strong>School ID:</strong> <%= student.school_id %></p>
            <p><strong>Email:</strong> <%= student.email %></p>
            <p><strong>Interests:</strong> <%= student.interests %></p>
            <% if (student.profile_pic) { %>
                <img src="<%= student.profile_pic %>" alt="Profile Pic" class="img-thumbnail mt-2" width="150">
            <% } %>
        </div>
    </div>

    <h4 class="text-center mb-3">Achievements</h4>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Date Awarded</th>
            </tr>
        </thead>
        <tbody>
            <% achievements.forEach(a => { %>
                <tr>
                    <td><%= a.title %></td>
                    <td><%= a.description %></td>
                    <td><%= a.date_awarded.toISOString().split('T')[0] %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
