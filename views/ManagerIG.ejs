<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage IGs | IGConnect Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    body {
      background-color: #f4f7fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .page-header {
      background: #212529;
      color: white;
      padding: 2rem;
      text-align: center;
    }
    .ig-table th {
      background-color: #f39c12;
      color: white;
    }
    .btn-action {
      margin: 0 2px;
    }
    .module-box {
      background: white;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }
  </style>
</head>
<body>

  <header class="page-header">
    <h1 class="fw-bold">Manage Interest Groups</h1>
    <p>View, edit, add or remove student IGs here.</p>
  </header>

  <div class="container py-4">
    <div class="d-flex justify-content-between mb-3">
      <h4 class="fw-bold">All IGs</h4>
      <a href="/admin/interest-groups/add" class="btn btn-warning"><i class="fas fa-plus me-1"></i> Add New IG</a>
    </div>

    <div class="module-box">
      <table class="table table-hover ig-table">
        <thead>
          <tr>
            <th>#</th>
            <th>IG Name</th>
            <th>Category</th>
            <th>Advisor</th>
            <th>Members</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% igList.forEach((ig, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= ig.ig_name %></td>
              <td><%= ig.category %></td>
              <td><%= ig.advisor_name %></td>
              <td><%= ig.member_count %></td>
              <td>
                <a href="/admin/interest-groups/edit/<%= ig.id %>" class="btn btn-sm btn-primary btn-action"><i class="fas fa-edit"></i></a>
                <form action="/admin/interest-groups/delete/<%= ig.id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger btn-action" onclick="return confirm('Are you sure you want to delete this IG?');"><i class="fas fa-trash"></i></button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
