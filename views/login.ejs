<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
/>

  <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

  <style>
    body {
      background: linear-gradient(135deg, #fff3e0, #ffe0b2);
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .glass-panel {
      background: rgba(255, 255, 255, 0.4);
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 8px 40px rgba(0, 0, 0, 0.15);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      transition: all 0.3s ease;
    }

    .glass-panel:hover {
      box-shadow: 0 0 20px #ff9800, 0 0 30px #ffc107;
      transform: scale(1.01);
    }

    .btn-primary {
      background-color: #ff9800;
      border: none;
      color: white;
      font-weight: bold;
      box-shadow: 0 0 10px #ff9800;
    }

    .btn-primary:hover {
      background-color: #fb8c00;
      box-shadow: 0 0 20px #ffa726;
    }

    .lottie-wrapper {
      max-width: 400px;
      margin: auto;
    }

    @media (max-width: 768px) {
      .row.flex-md-row-reverse {
        flex-direction: column !important;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row align-items-center justify-content-center flex-md-row-reverse">
      <!-- Lottie Left Side -->
      <div class="col-md-6 mb-4 mb-md-0 text-center">
        <div class="lottie-wrapper">
          <lottie-player
            src="https://lottie.host/1f546161-57ba-448b-a8e9-1e19aafbc2f6/fBJvHDrP2n.json"
            background="transparent"
            speed="1"
            style="width: 100%; height: auto;"
            loop autoplay>
          </lottie-player>
        </div>
      </div>

      <!-- Login Form Right Side -->
      <div class="col-md-6">
        <div class="glass-panel">
          <h2 class="text-center mb-4">Login</h2>
          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" name="email" id="email" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" name="password" id="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
          </form>

          <div class="text-center mt-4">
  <p class="mb-2">Or login with:</p>
  <a href="/auth/google" class="btn btn-outline-dark me-2">
    <i class="fab fa-google me-1"></i> Google
  </a>
  <a href="/auth/github" class="btn btn-outline-dark">
    <i class="fab fa-github me-1"></i> GitHub
  </a>
</div>

        </div>
      </div>
    </div>
  </div>
</body>
</html>
