<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>IGConnect | Login</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
    }

    .left-panel {
      background-color: #ffffff;
      padding: 50px 30px;
    }

    .form-control {
      border-radius: 10px;
    }

    .btn-primary {
      background-color: #1e88e5;
      border: none;
      border-radius: 10px;
      font-weight: 600;
    }

    .btn-outline-dark {
      border-radius: 10px;
    }

    .form-icon {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #aaa;
    }

    .form-group {
      position: relative;
    }

    .form-group input {
      padding-left: 40px;
    }

    .eye-icon {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
    }

    .oauth-icons a {
      margin-right: 10px;
    }

    .right-panel img {
      max-height: 90vh;
      object-fit: cover;
      width: 100%;
    }

    @media (max-width: 768px) {
      .left-panel {
        padding: 30px 20px;
      }
      .right-panel img {
        max-height: 250px;
      }
    }
  </style>
</head>
<body>

<div class="container-fluid">
  <div class="row flex-column flex-lg-row min-vh-100">
    <!-- Left Login Panel -->
    <div class="col-lg-6 d-flex flex-column justify-content-center left-panel">
      <div class="w-100" style="max-width: 450px; margin: 0 auto;">
        <!-- ✅ Logo -->
        <div class="text-center mb-4">
          <img src="/Images/IGConnect-logo-transparent.png" alt="IGConnect Logo" style="height: 120px;" />
        </div>

        <h1 class="fw-bold mb-2">Welcome Back</h1>
        <p class="text-muted mb-4">Log in to manage your CCA activities and records</p>

        <!-- Login Form -->
        <form action="/login" method="POST">
          <div class="form-group mb-3">
            <i class="fas fa-envelope form-icon"></i>
            <input type="email" name="email" class="form-control" placeholder="Email address" required />
          </div>

          <div class="form-group mb-2">
            <i class="fas fa-lock form-icon"></i>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required />
            <i class="fas fa-eye eye-icon" onclick="togglePassword()"></i>
          </div>

          <div class="text-end mb-4">
            <a href="/reset-password" class="text-decoration-none small text-muted fw-bold">Forgot Password?</a>
          </div>

          <button type="submit" class="btn btn-primary w-100 mb-3">Continue</button>
        </form>

       

        <p class="text-center text-muted small">
          Don’t have an account? <a href="/register" class="fw-bold">Sign up</a>
        </p>
      </div>
    </div>

    <!-- Right Image Panel -->
    <div class="col-lg-6 right-panel d-flex align-items-center justify-content-center p-0">
      <img src="/Images/Logins.jpg" alt="IGConnect Login Illustration" />
    </div>
  </div>
</div>

<!-- ✅ Modal: Success -->
<% if (successMsg && successMsg.length > 0) { %>
  <div class="modal fade" id="successModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-success">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title">Success</h5>
        </div>
        <div class="modal-body">
          <%= successMsg[0] %>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      new bootstrap.Modal(document.getElementById('successModal')).show();
    });
  </script>
<% } %>

<!-- ❌ Modal: Error -->
<% if (errorMsg && errorMsg.length > 0) { %>
  <div class="modal fade" id="errorModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-danger">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">Error</h5>
        </div>
        <div class="modal-body">
          <%= errorMsg[0] %>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      new bootstrap.Modal(document.getElementById('errorModal')).show();
    });
  </script>
<% } %>

<script>
  function togglePassword() {
    const passwordInput = document.getElementById("password");
    const icon = event.target;
    if (passwordInput.type === "password") {
      passwordInput.type = "text";
      icon.classList.remove("fa-eye");
      icon.classList.add("fa-eye-slash");
    } else {
      passwordInput.type = "password";
      icon.classList.remove("fa-eye-slash");
      icon.classList.add("fa-eye");
    }
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
