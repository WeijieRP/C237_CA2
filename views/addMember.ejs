<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Add New Member - IG Connect</title>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">IG Connect</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/members">Members</a>
                        </li>
                        <% if (user.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/ig_roles">IG Roles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/addMember">Add New Member</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/addIgRole">Add New IG Role</a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <span class="nav-link text-white">Welcome, <%= user.username %>!</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <h2 class="text-center mb-4">Add New Member</h2>

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errors %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <form action="/addMember" method="POST" class="mx-auto" style="max-width: 500px;">

            <div class="mb-3">
                <label for="student_id" class="form-label">Student ID</label>
                <input type="text" class="form-control" id="student_id" name="student_id" required>
            </div>

            <div class="mb-3">
                <label for="ig_id" class="form-label">IG ID</label>
                <input type="text" class="form-control" id="ig_id" name="ig_id" required>
            </div>

            <div class="mb-3">
                <label for="role_id" class="form-label">Role</label>
                <select class="form-select" id="role_id" name="role_id" required>
                    <option value="">Select Role</option>
                    <% roles.forEach(function(role){ %>
                        <option value="<%= role.id %>"><%= role.title %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-4">
                <label for="joined_date" class="form-label">Joined Date</label>
                <input type="date" class="form-control" id="joined_date" name="joined_date" required>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Add Member</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <a href="/members" class="btn btn-secondary">Back to Members List</a>
        </div>
    </div>
</body>
</html>