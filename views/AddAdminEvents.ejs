<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add New Event | IGConnect Admin</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

  <!-- Custom Styles -->
  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background: url('/Images/AddIG.jpg') no-repeat center center fixed;
      background-size: cover;
      position: relative;
    }

    .background-overlay {
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background-color: rgba(0, 0, 0, 0.6);
      z-index: 0;
    }

    .content-wrapper {
      position: relative;
      z-index: 1;
    }

    .form-container {
      max-width: 700px;
      margin: auto;
      background-color: rgba(255, 255, 255, 0.92);
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .heading-title {
      color: #ffffff;
      text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.7);
    }

    .btn-custom {
      background-color: #0d6efd;
      color: white;
    }

    .btn-custom:hover {
      background-color: #0a58ca;
    }
  </style>
</head>
<body>
  <!-- Background Overlay -->
  <div class="background-overlay"></div>

  <!-- Navbar -->
  <%- include('partials/admin-navbar') %>

  <!-- Main Content -->
  <div class="container my-5 content-wrapper">
    <!-- Heading -->
    <div class="text-center mb-5">
      <h1 class="display-5 fw-bold heading-title">Add a New Event</h1>
      <p class="lead text-white">Create and manage upcoming student events</p>
    </div>

    <!-- Form Card -->
    <div class="form-container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Event Details</h2>
        <a href="/admin/events" class="btn btn-secondary">
          <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
      </div>

      <form action="/admin/events/add" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Event Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter event title" required>
        </div>

        <div class="mb-3">
          <label for="date" class="form-label">Event Date</label>
          <input type="date" class="form-control" id="date" name="date" required>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" class="form-control" id="location" name="location" placeholder="Enter event location" required>
        </div>

        <div class="mb-3">
          <label for="ig_id" class="form-label">Organized By (IG)</label>
          <select class="form-select" id="ig_id" name="ig_id" required>
            <option value="">-- Select Interest Group --</option>
            <% igList.forEach(ig => { %>
              <option value="<%= ig.id %>"><%= ig.igName %></option>
            <% }) %>
          </select>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Event Description</label>
          <textarea class="form-control" id="description" name="description" rows="4" placeholder="Write about the event..." required></textarea>
        </div>

        <button type="submit" class="btn btn-custom">
          <i class="fas fa-calendar-plus me-1"></i> Add Event
        </button>
      </form>
    </div>
  </div>

  <%- include('partials/admin-footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
