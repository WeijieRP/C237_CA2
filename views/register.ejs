
<style>
  body {
    background: linear-gradient(135deg, #fff3e0, #ffe0b2);
    font-family: 'Segoe UI', sans-serif;
  }

  .glass-panel {
    background: rgba(255, 255, 255, 0.4);
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.15);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
  }

  .glass-panel:hover {
    box-shadow: 0 0 20px #ff9800, 0 0 30px #ffc107;
    transform: scale(1.01);
  }

  .btn-primary {
    background-color: #ff9800;
    border: none;
    color: white;
    font-weight: bold;
    box-shadow: 0 0 10px #ff9800;
  }

  .btn-primary:hover {
    background-color: #fb8c00;
    box-shadow: 0 0 20px #ffa726;
  }
</style>

<div class="container">
  <div class="row align-items-center justify-content-center">
    <!-- Lottie Animation -->
    <div class="col-md-6 lottie-area">
      <lottie-player
        src="https://lottie.host/7218e007-7ff3-4ef2-810c-d63310104c2e/RUz7mVxROp.json"
        background="transparent"
        speed="1"
        style="width: 100%; max-width: 400px;"
        loop autoplay>
      </lottie-player>
    </div>

    <!-- Form -->
    <div class="col-md-6">
      <div class="glass-panel">
        <h2 class="text-center mb-4">Register</h2>
        <form action="/register" method="post">
          <div class="mb-3">
            <label for="username">Username</label>
            <input type="text" class="form-control" name="username" required>
          </div>
          <div class="mb-3">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" required>
          </div>
          <div class="mb-3">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" required>
          </div>
          <div class="mb-4">
            <label for="roles">Role</label>
            <select class="form-select" name="roles" required>
              <option value="">Select Role</option>
              <option value="user">User</option>
              <option value="admin">Admin</option>
            </select>
          </div>
          <button class="btn btn-primary w-100" type="submit">Register</button>
        </form>

        <div class="text-center mt-4 mb-4">
          <p class="text-muted">Or sign up using</p>
          <a href="/auth/google" class="btn btn-outline-dark me-2">
            <img src="https://img.icons8.com/color/16/000000/google-logo.png" /> Google
          </a>
          <a href="/auth/github" class="btn btn-outline-dark">
            <img src="https://img.icons8.com/ios-glyphs/16/ffffff/github.png" style="filter: invert(1);" /> GitHub
          </a>

          <p class="text-muted mt-3">Have an account? <a href="/login">Login</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
